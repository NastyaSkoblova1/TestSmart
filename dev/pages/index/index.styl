.layout
		width 1120px
		margin 0 auto

		+below(1200px)
			width auto
			margin 0 30px
	
.container-grey
	background-color #f4f4f4

.main
		
	&__row
		display flex
		justify-content space-between
	
	&__intro
		display flex
		justify-content space-between

	&__title
		@extend $h-reset
		width calc(100% * 2/3)
		font-size 48pr
		font-weight 700

		span
			font-size 24pr
			font-weight 400
	
	&__links
		width calc((100% - 30px * 2) * 1/3)
	
	&__links-item
		@extend $link-reset
		display block
		font-size 16pr

		& + &
			margin-top 20pr
		
.main-news
	display flex
	justify-content space-between
	margin-bottom 30px

	&__image
		width calc(100% * 2/3)

		img
			max-width 100%
	
	&__wrap
		width calc((100% - 30px * 2) * 1/3)
		display flex
		flex-direction column
		justify-content space-between
	
	&__title
		@extend $h-reset
		font-size 32pr
		font-weight 600
	
	&__date
		font-size 14pr
		color #707070

.news
	width calc((100% - 30px * 2) * 1/3)

	&__image
		img
			max-width 100%

.main__active
	display flex
	justify-content space-between

.services, .parts
	&__title
		font-size 32pr
		font-weight 700

.services
	width calc(100% * 2/3)

	&__item
		font-size 20pr

.parts
	width calc((100% - 30px * 2) * 1/3)